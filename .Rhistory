group_by(Brand) %>%
summarise(meanprice=mean(Price))
ggplot(data=GasPricesC) +
geom_col(aes(x=meanprice, y=Brand))
ggplot(data=GasPricesC) +
geom_col(aes(x=meanprice, y=Brand)) +
ylim(1.5,2)
ggplot(data=GasPricesC) +
geom_col(aes(x=meanprice, y=Brand)) +
ylim(1.5,2)
ggplot(data=GasPricesC) +
geom_col(aes(x=meanprice, y=Brand)) +
ylim(1.5:2)
ggplot(data=GasPricesC) +
geom_col(aes(x=meanprice, y=Brand)) +
ylim(1, 2)
ggplot(data=GasPricesC) +
geom_col(aes(x=meanprice, y=Brand)) +
xlim(1, 2)
ggplot(data=GasPricesC) +
geom_col(aes(x=meanprice, y=Brand)) +
